<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.CreateActivity"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="300dp"
                        android:layout_marginTop="16dp"
                        app:cardElevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="135dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile_img"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/username" />

                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/add_your_profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Add Your Profile Pic"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/addStory"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/name"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_box"
                    android:drawableStart="@drawable/name"
                    android:ems="10"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/email"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/emails"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_box"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:ems="12"
                    android:hint="@string/username_email_address_or_mobile_number"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="12sp" />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="12dp"
                    android:text="@string/username"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_box"
                    android:ems="10"
                    android:hint="Enter your unique username"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:id="@+id/relative1"
                    >

                    <TextView
                        android:id="@+id/passW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="@string/passwordd"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_below="@id/passW"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:ems="10"
                        android:paddingHorizontal="8dp"
                        android:textSize="12sp"
                        android:hint="@string/password"
                        android:background="@drawable/bg_box"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/passwordShowHide2"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_below="@id/passW"
                        android:layout_marginEnd="40dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_hide_pwd"/>

                </RelativeLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="18dp"
                    android:text="@string/confirm_password"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/conf_password"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@drawable/bg_box"
                    android:ems="10"
                    android:hint="@string/confirm_your_password"
                    android:inputType="textVisiblePassword"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/terms_check"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:checked="false"
                       />

                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/are_you_above_18_years_of_age"
                        android:textColor="#D41204"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:elevation="10dp"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signUp"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/login_bg"
                    android:text="@string/sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/login1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="Already have an account ?Login"
                        android:textSize="12sp" />



            </LinearLayout>

    </ScrollView>

</LinearLayout>